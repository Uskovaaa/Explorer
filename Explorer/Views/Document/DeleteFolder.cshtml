@model IEnumerable<Folder>

@{
    ViewData["Title"] = "Удалить";
}
<div class="overlay">
    <form asp-action="Rename" class="send_form">
        @foreach (var obj in Model)
        {
            <div class="object">
                <div class="label">
                    <label class="label_name">@obj.Name</label>
                    <span class="visually-hidden">Название папки</span>
                </div>
                <div class="button">
                    <a asp-controller="Document" asp-action="DeleteFolderAction" asp-route-id="@obj.ID" type="submit" class="btn btn-send">
                        Удалить
                        <span class="visually-hidden">Удалить</span>
                    </a>
                </div>
            </div>
        }
        <a asp-controller="Document" asp-action="Index" class="btn btn-close">X</a>
    </form>
</div>