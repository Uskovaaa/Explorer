@model Folder

@{
    ViewData["Title"] = "Удалить";
}

<div class="overlay">
    <form method="post" asp-action="DeleteFolderAction" class="send_form">
        <div asp-validation-summary="All" class="object">
            <div class="label">
                <h4>Вы уверены, что хотите удалить?</h4>
                <label class="label_name">@Model.Name</label>
                <span asp-validation-for="Name" class="visually-hidden">Название папки</span>
            </div>
            <div class="button delete">
                <button type="submit" class="btn btn-send">
                    Удалить
                    <span class="visually-hidden">Удалить</span>
                </button>
            </div>
        </div>
        <a asp-controller="Document" asp-action="Index" class="btn btn-close">X</a>
    </form>
</div>
